<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:id="@+id/card_searchExp_2"
                                       app:cardElevation="8dp" android:layout_height="wrap_content" app:contentPadding="8dp" app:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content" android:id="@+id/view_searchExp2">
            <ImageView android:id="@+id/item_searchExp_img" android:layout_width="70dp"
                       android:layout_height="70dp" android:src="@drawable/homer1"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"

            />
            <TextView android:id="@+id/item_searchExp_name" android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@android:color/black"
                      android:textSize="17sp"
                      app:layout_constraintStart_toEndOf="@+id/item_searchExp_img"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@+id/item_searchExp_heart"
                      app:layout_constraintBottom_toTopOf="@+id/item_searchExp_description"/>
            <ImageView android:layout_width="30dp" android:layout_height="30dp"
                       android:src="@drawable/heart_empty_red"
                       app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                       android:id="@+id/item_searchExp_heart"
                       android:layout_marginBottom="8dp"
                       app:layout_constraintBottom_toTopOf="@+id/item_searchExp_description"/>

            <TextView android:id="@+id/item_searchExp_description" android:layout_width="match_parent" android:layout_height="wrap_content"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/item_searchExp_img"/>
            <TextView android:id="@+id/item_searchExp_belongTo" android:gravity="end" android:layout_width="match_parent" android:layout_height="wrap_content"
                      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/item_searchExp_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>