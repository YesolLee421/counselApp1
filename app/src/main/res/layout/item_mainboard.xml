<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView android:id="@+id/card_mainB_2" android:layout_width="match_parent"
                                        app:cardElevation="8dp" android:layout_height="wrap_content" app:contentPadding="8dp" app:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout android:id="@+id/view_mainB2" android:padding="8dp" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                    android:id="@+id/item_mainboard_title"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:id="@+id/item_mainboard_commenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:id="@+id/item_mainboard_content"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>