<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".myPage.MyPageExpActivity" android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar_mainB">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="마이페이지 수정"/>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_gravity="center_horizontal" android:padding="8dp">

            <EditText android:id="@+id/et_writeExpert_name_formal" android:paddingVertical="8dp" android:textSize="20sp" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="실명 입력"/>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/homer1" android:id="@+id/img_writeExpert_portrait"/>
            <Button android:id="@+id/btn_writeExpert_selectImg" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="프로필 사진 선택"/>
            <TableLayout android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="소개글"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textColor="@android:color/black"/>

                    <EditText
                            android:id="@+id/et_writeExpert_about"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"/>
                </TableRow>

                <TableRow>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="소속"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textColor="@android:color/black"/>

                    <EditText
                            android:id="@+id/et_writeExpert_belongTo"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"/>
                </TableRow>

                <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="학력"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textColor="@android:color/black"/>

                <EditText
                        android:id="@+id/et_writeExpert_education"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"/>
            </TableRow>
                <TableRow>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="경력"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textColor="@android:color/black"/>

                    <EditText
                            android:id="@+id/et_writeExpert_career"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="자격사항"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textColor="@android:color/black"/>

                    <EditText
                            android:id="@+id/et_writeExpert_certificate"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"/>
                </TableRow>
                <TableRow>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="연구분야"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textColor="@android:color/black"/>

                    <EditText
                            android:id="@+id/et_writeExpert_major"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <Button android:id="@+id/btn_writeExpert_save" android:layout_margin="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="확인"/>


</LinearLayout>